<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TFGJunioJava" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.TFG.SearchView" parent="ThemeOverlay.Material3.Search">
        <item name="searchViewStyle">@style/Widget.TFG.SearchView</item>
    </style>

    <style name="Widget.TFG.SearchView" parent="Widget.Material3.SearchView">
        <item name="android:background">@drawable/searchview_background</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
    </style>
</resources>
